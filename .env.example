# =============================================================================
# MedScribe AI API Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# WARNING: Never commit .env to version control!

# =============================================================================
# API Configuration
# =============================================================================
MedScribe_API_HOST=0.0.0.0
MedScribe_API_PORT=8000
MedScribe_API_WORKERS=4
MedScribe_API_DEBUG=false

# =============================================================================
# Security Configuration
# =============================================================================
# IMPORTANT: Change this to a strong random value in production!
# Generate with: openssl rand -hex 32
MedScribe_JWT_SECRET_KEY=your-secret-key-here-change-in-production
MedScribe_JWT_ALGORITHM=HS256
MedScribe_JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
MedScribe_JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# CORS Configuration
# =============================================================================
MedScribe_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
MedScribe_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Redis Configuration
# =============================================================================
MedScribe_REDIS_HOST=localhost
MedScribe_REDIS_PORT=6379
MedScribe_REDIS_DB=0
MedScribe_REDIS_PASSWORD=

# =============================================================================
# Celery Configuration
# =============================================================================
MedScribe_CELERY_BROKER_URL=redis://localhost:6379/0
MedScribe_CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# Rate Limiting
# =============================================================================
MedScribe_RATE_LIMIT_PER_MINUTE=60
MedScribe_RATE_LIMIT_AUTHENTICATED=120

# =============================================================================
# File Upload Configuration
# =============================================================================
MedScribe_MAX_UPLOAD_SIZE_MB=100
MedScribe_ALLOWED_AUDIO_FORMATS=[".mp3", ".wav", ".m4a", ".flac"]
MedScribe_TEMP_FILE_DIR=/tmp/MedScribe

# =============================================================================
# Existing MedScribe AI Settings
